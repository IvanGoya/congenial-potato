<section class="row">
    <div class="col-md-6 login-container">
        <h2>Log In</h2>
  
      <form class="form login-form">
        <h4>Email</h4>
        <div class="form-group">
          <input class="form-input" type="text" id="email-login" />
        </div>
        <h4>Password</h4>
        <div class="form-group">
          <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="submit-button" type="submit">Log In</button>
        </div>
      </form>
      <button class="signup-button open-button">Create a new user</button>
    </div>
</section>
<section class="signup-container">
  <dialog class="signup-modal modal">
      
      <form class="form signup-form" method="dialog">
        <h2>Create New User</h2>
        <br>
        <h4>First Name</h4>
        <div class="form-group">
          <input label="First Name" class="form-input" type="text" id="first-name-signup" />
        </div>
        <h4>Last Name</h4>
        <div class="form-group">
          <input label="Last Name" class="form-input" type="text" id="last-name-signup" />
        </div>
        <h4>Email</h4>
        <div class="form-group">
            <input label="Email" class="form-input" type="text" id="email-signup" />
        </div>
        <h4>Password</h4>
        <div class="form-group">
            <input label="Password" class="form-input" type="password" id="password-signup" />
        </div>
        <div class="form-group">
            <button id="submitBtn" class="submit-button" type="submit">Submit</button>
            <button class="close-button">Cancel</button>
      </div>
    </form>
  </dialog>
</section>
      

<script src="/js/login.js"></script>
<script src="/js/global.js"></script>