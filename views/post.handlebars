<div class="single-post-container">

    <section class="main-post">
         <h4>Posted: {{postTime}}</h4>
      <div class="post-title">
        <h4 class="post-text title-text">
            {{postTitle}}
        </h4>
      </div>
          </a>
      <div class="post-body">
            <p class="post-text">
            {{postBody}}
        </p>
      </div>
      <button class="comment-btn" id="comment-btn">Comment</button>
        <p>
            <a class="name-link" href="/user/{{{user.id}}}">
            {{poster_first}} {{poster_last}}</a> {{createdAt}}
        </p>
      <br>
    </section>
   
    <section id="comment-box" class="comment-box">
        <div class = "comment-container">
            <h2 class = "comment-title">Comment:</h2>
                <div class = "comment-body">    
                        <p class = "post-text title-text">
                        <textarea class="new-post-item" id="modal-desc" onfocus="if (this.value=='Description') this.value = ''" type="text" value="Description"></textarea>                        </p>
                </div>
                <div>
                      <button class="comment-btn" type="submit">Submit</button>
                     <button id="cancel-btn" class="close-button comment-btn">Cancel</button>
                 </div>
    </div>
    </section>

    {{#each post as |comment| }}
    <section class = "comment-flex">
    <div class = "comment-container">
            <h2 class = "comment-title">{{first_name}} {{last_name}}</h2>
                <div class = "comment-body">    
                        <p class = "post-text title-text">
                            {{comment.comment_body}} 
                        </p>
                </div>
                <h4 class = "created-at">{{comment.created_at}}</h4>
    </div>
    </section>
    {{/each}}

</div>

    <script src="/js/post.js"></script>